<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.lifecoders.multidictionary.Main2Activity">



    <EditText
        android:id="@+id/edit_add_word"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="100dp"
        android:hint="введите слово"
        android:textAlignment="center"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/edit_add_translate"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="50dp"
        android:hint="перевод"
        android:textAlignment="center"

        android:inputType="text"/>

    <EditText
        android:id="@+id/edit_add_note"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="80dp"
        android:hint="Комментарии"
        android:textAlignment="center"
        android:inputType="textMultiLine"/>

    <Button
        android:id="@+id/btn_addWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="50dp"
        android:text="добавить"/>

    <Button
        android:id="@+id/btn_back_to_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:onClick="OpenMainActivity"/>
</LinearLayout>
